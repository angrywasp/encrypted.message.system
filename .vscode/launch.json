{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/rpc-test/get_address",
            "args": []
        },
        {
            "name": "SeedNode",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/netcoreapp3.1/EMS",
            "cwd": "${workspaceRoot}",
            "console": "externalTerminal",
            "args":[
                "--no-reconnect"]
        },
        {
            "name": "Node-1",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/netcoreapp3.1/EMS",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args":[
                "--p2p-port", "3501", 
                "--rpc-port", "4501", 
                "--key-file", "default.keys", 
                "--log-file", "app.log"]
        },
        {
            "name": "Node-2",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/netcoreapp3.1/EMS",
            "cwd": "${workspaceRoot}/Bin",
            "console": "externalTerminal",
            "args":[
                "--p2p-port", "3502",
                "--rpc-port", "4502", 
                "--key-file", "node2.keys", 
                "--log-file", "node2.log",
                "--seed-nodes", "127.0.0.1:3500"]
        },
        {
            "name": "Node-3",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/netcoreapp3.1/EMS",
            "cwd": "${workspaceRoot}/Bin",
            "console": "externalTerminal",
            "args":[
                "--p2p-port", "3503", 
                "--rpc-port", "4503", 
                "--key-file", "node3.keys", 
                "--log-file", "node3.log",
                "--seed-nodes", "127.0.0.1:3500"]
        }
    ]
}